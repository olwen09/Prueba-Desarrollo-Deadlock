@model Prueba_Desarrollo_Deadlock.Models.EmpleadoViewModel

@{ ViewData["Title"] = "Create";

    MensajesViewModel mensaje = new MensajesViewModel();

    if (TempData["mensaje"] != null)
    {

        mensaje = TempData.Get<MensajesViewModel>("mensaje");

    } }

@section Style
{
    <link href="~/app-assets/vendors/noUiSlider/nouislider.css" rel="stylesheet" />
    <link href="~/app-assets/css/custom/custom.css" rel="stylesheet" />
    <link href="~/lib/toastr.js/toastr.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/jquery-confirm/dist/jquery-confirm.min.css" rel="stylesheet" />

}




<div class="row">
    <form class="col s12 formValidate" method="post" asp-area="" asp-controller="Empleado" asp-action="GuardarEmpleado">

      
        <input type="hidden" asp-for="Creacion" />
        <input type="hidden" asp-for="EmpleadoId" />
        <input type="hidden" asp-for="DireccionId" />
  






        <div>
            <span asp-validation-sumary=""></span>
        </div>
        @*Informacion personal*@

        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Información Personal</h4>

                <div class="row ">


                    <div class="input-field col s12 m6 l4">
                        <input asp-for="NombreEmpleado" id="nombre" type="text" class="validate">
                        <label for="nombre">Nombre</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l4">
                        <input asp-for="ApellidoEmpleado" id="apellido" type="text" class="validate">
                        <label for="apellido">Apellido</label>
                        <span class="red-text validationDisplay"></span>
                    </div>




                    <div class="input-field col s12 m6 l3">
                        <input asp-for="EmpleadoDocumento" id="numerodocumento" type="text" class="validate">
                        <label for="numerodocumento">Número del Documento</label>
                        <span class="red-text validationDisplay"></span>
                    </div>


                    <div class="input-field col s12 m6 l3">
                        <input asp-for="FechaDeNacimiento" id="FechaDeNacimiento" type="text" class="datepicker">
                        <label for="FechaDeNacimiento">Fecha de nacimiento</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l4">
                        <div class="row">
                            <label for="select2User" class="col s12">Posiciones</label>
                        </div>
                        <select asp-for="PosicionId"  class="form-control js-example-basic-single" style="width: 100%" asp-items="ViewBag.Posiciones">
                            <option value="" disabled selected>Seleccione una Opción</option>

                        </select>


                    </div>
                </div>

             



            </div>



        </div>




        @*comunicacion*@

        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Información de contacto</h4>

                <div class="row ">


                    <div class="input-field col s12 m6 l6">
                        <input asp-for="Telefono1" id="celular1" type="text" class="validate">
                        <label for="celular1">Celular 1</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l6">
                        <input asp-for="Telefono2" id="celular2" type="text" class="validate">
                        <label for="celular2">Celular 2</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l6">
                        <input asp-for="Email" id="email" type="email" class="validate" required>
                        <label for="email">Email</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                </div>

            </div>



        </div>

        <div class="card">
            <div class="card-content">

                <h4 class="card-title">Información direccion</h4>

                <div class="row ">


                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Direccion.Direccion1" id="Direccion1" type="text" class="validate">
                        <label for="Direccion1">Direccion 1</label>
                        <span class="red-text validationDisplay"></span>
                    </div>



                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Direccion.Direccion2" id="Direccion2" type="text" class="validate">
                        <label for="lugarnacimiento">Direccion 2</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Direccion.Pais" id="Pais" type="text" class="validate">
                        <label for="Pais">Pais</label>
                        <span class="red-text validationDisplay"></span>
                    </div>

                    <div class="input-field col s12 m6 l3">
                        <input asp-for="Direccion.NumeroDeCasa" id="NumeroDeCasa" type="number">
                        <label for="NumeroDeCasa">Numero de casa</label>
                        <span class="red-text validationDisplay"></span>
                    </div>




                </div>

            </div>



        </div>

        <div class="input-field col s12">

            <button class="teal btn waves-effect waves-light" type="submit">
                <i class="material-icons left">save</i>
                Guardar
            </button>



            <a class=" btn waves-effect waves-light" asp-area="" asp-controller="Empleado" asp-action="Index">
                <i class="material-icons left">list</i>
                Ir a La Lista
            </a>


        </div>

    </form>


</div>

@section Scripts
{

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/app-assets/vendors/jquery-validation/jquery.validate.js"></script>
    <script src="~/app-assets/vendors/jquery-validation/additional-methods.js"></script>
    <script src="~/app-assets/vendors/jquery-cookies/jquery.cookies.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>


    <script src="~/app-assets/js/vendors.min.js" type="text/javascript"></script>

    <script src="~/app-assets/js/plugins.js" type="text/javascript"></script>
    <script src="~/app-assets/js/custom/custom-script.js" type="text/javascript"></script>
    <script src="~/lib/toastr.js/toastr.min.js"></script>
    <script src="~/app-assets/js/toastr.init.js" type="text/javascript"></script>
    <script src="~/app-assets/vendors/formatter/jquery.formatter.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-confirm/dist/jquery-confirm.min.js"></script>
    <script src="~/app-assets/js/scripts/extra-components-sweetalert.js" type="text/javascript"></script>


    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.12/dist/js/select2.min.js"></script>

    <script>


        $(document).ready(function () {
            $('.js-example-basic-single').select2({
                placeholder: "Seleccione una Opción",
            });
        });



        $(document).ready(function () {
            $('.datepicker').datepicker();
        });

          if ("@mensaje.Tipo".length > 0) {
            $.confirm({
                title: '@mensaje.Titulo',
                content: '@mensaje.Texto',
                type: '@mensaje.Tipo',
                typeAnimated: true,
                boxWidth: '500px',
                autoClose: 'cerrar|5000',
                useBootstrap: false,
                buttons: {
                    cerrar:{
                        text: "Cerrar",
                        action: function () { }
                    }
                },
                onClose: function () {
                    // before the modal is hidden.
                    $.ajax({
                        type: 'get',
                        url: '/home/ClearTempData',
                        success: function() {

                        }
                    });
                }
            });

        }

    </script>
}
